<div class='content'>
  <h1 id='profile'>Profile</h1>

  <p>
    <strong><%= @user.full_name %></strong>
  </p>
  
  <br />

  <ul>
    <li>Location: <%= @user.location %> </li>
    <li>Bio: <%= @user.bio %> </li>
  </ul>

  <br />

  <%= link_to 'Edit profile', edit_user_path(@user), class: 'action-card-edit' %>

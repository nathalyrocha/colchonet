<!DOCTYPE html>
<html>
  <head>
    <title>Colchonet</title>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@200;300;400;500;600&display=swap" rel="stylesheet">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%
=begin%>
 <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> 
<%
=end%>
  </head>

  <body>
    <header>
      <div id='header-wrap'>
        <h1><%= link_to 'Colcho.net', root_path %></h1>

        <% if user_signed_in? %>
          <%= render 'layouts/user_navbar' %>
        <% else %>
          <%= render 'layouts/visitor_navbar' %>
        <% end %>
      </div>
    </header>

    <div>
      <% if notice.present? %>
        <p id='notice'><%= notice %></p>
      <% end %>

      <% if alert.present? %>
        <p id='alert'><%= alert %></p>
      <% end %>

      <%= yield %> 
    </div>
  </body>
</html>
